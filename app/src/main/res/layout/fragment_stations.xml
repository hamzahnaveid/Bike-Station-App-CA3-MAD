<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <ImageView
                android:id="@+id/rv_station_icon"
                android:layout_width="38dp"
                android:layout_height="57dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/station_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/rv_available_bikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Available Bikes"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/rv_address"
                app:layout_constraintTop_toBottomOf="@+id/rv_address" />

            <TextView
                android:id="@+id/rv_available_stands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Stands"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/rv_available_bikes"
                app:layout_constraintTop_toBottomOf="@+id/rv_available_bikes" />

            <TextView
                android:id="@+id/rv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="5dp"
                android:text="Address"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/rv_available_bikes"
                app:layout_constraintStart_toEndOf="@id/rv_station_icon" />

            <TextView
                android:id="@+id/rv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="12dp"
                android:text="Distance"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/rv_distance"
                app:layout_constraintTop_toBottomOf="@+id/rv_distance" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>